{
	"name": "Reader",
	"description": "Reader for various file types: EPUB, PDF and ODF (ODT, ODS, ODP)",
	"launch_path": "/index.html",
	"icons": {
		"512": "/icon-512.png",
		"128": "/icon-128.png"
	},
	"version": "1.2",
	"developer": {
		"name": "Michael MÃ¼ller",
		"url": "https://github.com/Schnark"
	},
	"default_locale": "en",
	"activities": {
		"open": {
			"filters": {
				"type": [
					"application/epub+zip",
					"application/pdf",
					"application/vnd.oasis.opendocument.text",
					"application/vnd.oasis.opendocument.spreadsheet",
					"application/vnd.oasis.opendocument.presentation",
					"text/plain",
					"text/javascript",
					"application/x-javascript",
					"text/xml",
					"text/css",
					"text/html",
					"application/x-web-app-manifest+json",
					""
				],
				"filename": {
					"pattern": ".*\\.(epub|pdf|odt|ods|odp|txt|js|xml|css|html|webapp)",
					"regexp": "\\.(epub|pdf|odt|ods|odp|txt|js|xml|css|html|webapp)$"
				}
			},
			"disposition": "window",
			"returnValue": false,
			"href": "/index.html"
		}
	},
	"locales": {
		"de": {
			"name": "Leser"
		}
 	}
}
